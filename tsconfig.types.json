{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"outDir": "dist/types",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noErrorTruncation": true
	},
	"include": ["src"]
}
